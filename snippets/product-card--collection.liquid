<li class="product-card">
    <div class="images">
        <div class="image-outline"></div>
        <a href="{{ collection.url }}{{ prod.url }}" title="{{ product.title }}">
            <img class="one" src="{{ prod.images[0] | image_url }}" alt="{{ prod.featured_image.alt }}" />
            {% if prod.images.size > 1 %}
                <img class="two" src="{{ prod.images[1] | image_url }}" alt="{{ prod.featured_image.alt }}" />
            {% else %}
                <img class="two" src="{{ prod.images[0] | image_url }}" alt="{{ prod.featured_image.alt }}" />
            {% endif %}
        </a>
    </div>
    <div class="data">
        <div class="left">
            <div class="title">
                <h3>
                    <a href="{{ collection.url }}{{ prod.url }}" title="{{ prod.title }}">
                        {{ prod.title }}
                    </a>
                </h3>
            </div>
            <div class="category">
                <a href="/collections/all?filter.p.product_type={{ prod.type }}" title="{{ prod.type }}">
                    {{ prod.type }}
                </a>
            </div>
        </div>
        <div class="right">
            {% if prod.price_max > prod.price %}
                {{ prod.price_min | money_without_trailing_zeros }} & up
            {% else %}
                {{ prod.price | money_without_trailing_zeros }}
            {% endif %}
        </div>
    </div>
</li>