{{ 'component--team-mates.css' | asset_url | stylesheet_tag }}

<h2 class="section-title">
  <a href="/pages/team/" title="Team">{{ 'Nappy Boy Team' | escape }}</a>
</h2>

<ul class="team-list">
  {% for collection in collections %}
    {% if collection.metafields.collection.team_mate == true %}
      {% render 'team-mate--card', collection: collection %}
    {% endif %}
  {% endfor %}
</ul>


{% schema %}
  {
    "name": "Team Mates",
    "tag": "section",
    "class": "team-mates section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title"
      }
    ],
    "presets": [{
      "name": "Latest Products"
    }]
  }
{% endschema %}