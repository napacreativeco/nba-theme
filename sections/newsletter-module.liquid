{{ 'component--newsletter.css' | asset_url | stylesheet_tag }}

<div class="newsletter-wrapper" data-aos="fade-up">
    <div class="left">

      <div class="data">
        <h3>
          {{ 'Sign up to know about' | escape }}<br />{{ 'the next Drop' | escape }}
        </h3>

        <div id="mc_embed_shell">
          {% comment %} <link href="//cdn-images.mailchimp.com/embedcode/classic-061523.css" rel="stylesheet" type="text/css"> {% endcomment %}

          <div id="mc_embed_signup">
            <form action="https://nandostl.us21.list-manage.com/subscribe/post?u=272cb88ba8499b39e0ce0aa9d&amp;id=f92738bc26&amp;f_id=0088d8e6f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
              <div id="mc_embed_signup_scroll">
                <div class="mc-field-group">
                  <label style="display: none;" for="mce-EMAIL">Email Address <span class="asterisk">*</span></label>
                  <input type="email" name="EMAIL" class="required email" id="mce-EMAIL" required="" value="" placeholder="enter your email">
                  <span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
                </div>
                <div hidden="">
                  <input type="hidden" name="tags" value="2960857">
                </div>
                <div id="mce-responses" class="clear">
                  <div class="response" id="mce-error-response" style="display: none;"></div>
                  <div class="response" id="mce-success-response" style="display: none;"></div>
                </div>
                <div aria-hidden="true" style="position: absolute; left: -5000px;">
                  <input type="text" name="b_272cb88ba8499b39e0ce0aa9d_f92738bc26" tabindex="-1" value="">
                </div>
                <div class="clear">
                  <input type="submit" name="subscribe" id="mc-embedded-subscribe" class="button" value="JOIN UP">
                </div>
              </div>
            </form>
          </div>
          <script type="text/javascript" src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"></script>
          <script type="text/javascript">(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';fnames[3]='ADDRESS';ftypes[3]='address';fnames[4]='PHONE';ftypes[4]='phone';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
        </div>

      </div>

    </div>

    <div class="right" style="background: url('{{ section.settings.section_image | image_url }}'); background-size: cover; background-position: center center;">
    </div>
</div>


{% schema %}
  {
    "name": "Newsletter Signup",
    "tag": "section",
    "class": "newsletter-module section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title"
      },
      {
        "type": "image_picker",
        "id": "section_image",
        "label": "Image"
      }
    ],
    "presets": [{
      "name": "Newsletter Signup"
    }]
  }
{% endschema %}