{{ 'component--news-slider.css' | asset_url | stylesheet_tag }}

<div class="news-slider swiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
      
        {% when 'product' %}
          <div class="swiper-slide product_slide" data-type="{{ block.type }}">
            {{ block.settings.product.title }}
            {{ block.settings.image | image_url }}
          </div>
        {% when 'blog_slide' %}
          <div class="swiper-slide blog_slide" data-type="{{ block.type }}">
            {{ block.settings.article.title }}
          </div>
        {% when 'plain_slide' %}
          <div class="swiper-slide plain_slide" data-type="{{ block.type }}">
            {{ block.settings.plain_title }}
            {{ block.settings.plain_body }}
          </div>

      {% endcase %}
    {% endfor %}
  </div>

  <div class="swiper-pagination"></div>
</div>

{% schema %}
  {
    "name": "News Slider",
    "tag": "section",
    "class": "news-slider-section section",
    "settings": [
      {
        "type": "product",
        "id": "featured_product",
        "label": "Featured Product"
      }
    ],
    "blocks": [
      {
        "name": "Product",
        "type": "product_slide",
        "settings": [
          {
            "type": "product_list",
            "id": "product",
            "label": "Product",
            "limit": 1
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Slide Image"
          }
        ]
      },
      {
        "name": "News",
        "type": "blog_slide",
        "settings": [
          {
            "type": "article",
            "id": "article",
            "label": "Article"
          }
        ]
      },
      {
        "name": "Plain",
        "type": "plain_slide",
        "settings": [
          {
            "type": "text",
            "id": "plain_title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "plain_body",
            "label": "Body"
          },
          {
            "type": "url",
            "id": "plain_link",
            "label": "Link"
          },
          {
            "type": "image_picker",
            "id": "plain_image",
            "label": "Slide Image"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Featured Product"
    }]
  }
{% endschema %}

<script>
  const swiper = new Swiper('.news-slider', {
    direction: 'horizontal',
    loop: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true
    }
  });
</script>