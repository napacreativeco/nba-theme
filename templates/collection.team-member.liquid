{{ 'page--team-member.css' | asset_url | stylesheet_tag }}

<div class="team-member">
    <div class="team-title">
        {{ 'Team Member' | upcase | escape }}
    </div>

    <div class="top">
        <div class="left">

            <div class="team-swiper swiper">
                <div class="swiper-wrapper">
                    {% for image in collection.metafields.collection.team_member_gallery.value %}
                        <div class="swiper-slide" style="background: url('{{ image | image_url: width: 800 }}'); background-size: cover; background-position: center center;">
                        </div>
                    {% endfor %}
                </div>
                
                <div class="swiper-pagination"></div>
            </div>


        </div>
        <div class="right">
            <div class="name">
                <h1>{{ collection.title }}</h1>
            </div>

            <div class="hometown">
                hometown
            </div>

            <div class="fleet">
                fleet
            </div>
        </div>
    </div>

    <div class="bottom">
        <div class="left">
            <div class="section-title">
                <h3>{{ 'About ' | upcase | escape }}{{ collection.title | upcase | escape }}</h3>
            </div>
            <div class="description">
                {{ collection.description }}
            </div>
        </div>
    </div>

    {% render 'recommended-products', collection: collection %}
</div>

<script>
  const swiper = new Swiper('.team-swiper', {
    direction: 'horizontal',
    loop: true,
    autoplay: true,
    spaceBetween: 30,
    pagination: {
      el: '.swiper-pagination',
      clickable: true
    }
  });
</script>